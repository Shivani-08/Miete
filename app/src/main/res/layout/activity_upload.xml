<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"

    android:id="@+id/rentupload"
    android:weightSum="1">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NAME"
                android:textSize="20dp"
                android:textColor="#0000CD"/>
            <Space
                android:layout_width="5dp"
                android:layout_height="5dp" />
            <EditText
                android:hint="(Product name)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edit1"
                android:inputType="text"
                android:textColor="@color/colorAccent"
                android:selectAllOnFocus="true"
                android:isScrollContainer="true"/>
        </LinearLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt2"
                android:textSize="20dp"
                android:textColor="#0000CD"
                android:text="CATEGORY"
                />
            <Space
                android:layout_width="5dp"
                android:layout_height="5dp" />


            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinner1"
                android:entries="@array/country_arrays"
                android:prompt="@string/categories"
                android:isScrollContainer="true"/>
        </LinearLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt3"
                android:text="GENDER"
                android:textSize="20dp"
                android:textColor="#0000CD"
                />
            <Space
                android:layout_width="5dp"
                android:layout_height="5dp" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinner2"
                android:entries="@array/Gender"
                android:prompt="@string/Gender_selection"
                android:isScrollContainer="true" />
        </LinearLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#0000CD"
                android:text="LOCATION"
                />
            <Space
                android:layout_width="5dp"
                android:layout_height="5dp" />
            <EditText
                android:hint="(Current Address)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edit2"
                android:inputType="text"
                android:selectAllOnFocus="true"
                android:isScrollContainer="true"
                android:textColor="@color/colorAccent"
                /></LinearLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView

                android:id="@+id/txt5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RENT AMOUNT"
                android:textSize="20dp"
                android:textColor="#0000CD"/>
            <Space
                android:layout_width="5dp"
                android:layout_height="5dp" />
            <EditText
                android:hint="(in Rupees)"
                android:id="@+id/edit3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:inputType="number" />
        </LinearLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RENT DURATION"
                android:textSize="20dp"
                android:textColor="#0000CD"/>
            <Space
                android:layout_width="5dp"
                android:layout_height="5dp" />
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinner3"
                android:entries="@array/Duration"
                android:isScrollContainer="true" />
        </LinearLayout>
        <EditText
            android:id="@+id/edit4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:inputType="number" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADVANCED MONEY"
                android:textSize="20dp"
                android:textColor="#0000CD"/>
            <Space
                android:layout_width="5dp"
                android:layout_height="5dp" />
            <EditText
                android:hint="(in Rupees)"
                android:id="@+id/edit5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textColor="@color/colorAccent"/>
        </LinearLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CONTACT NO."
                android:textSize="20dp"
                android:textColor="#0000CD"/>
            <Space
                android:layout_width="5dp"
                android:layout_height="5dp" />
            <EditText
                android:hint="(Available Number)"
                android:id="@+id/edit6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:inputType="number" />
        </LinearLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />
        <Button
            android:layout_gravity="center"
            android:id="@+id/button1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="SELECT"
            android:textColor="@color/colorAccent"
            android:textSize="20dp"
            android:onClick="onSelectClick"
            />
        <ImageView
            android:foregroundGravity="center"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/rentImage"
            android:layout_gravity="center"
            android:scaleType="matrix"
            android:adjustViewBounds="false"
            android:cropToPadding="false" />
        <Button
            android:layout_gravity="center"
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="UPLOAD IMAGE"
            android:textSize="20dp"
            android:textColor="@color/colorAccent"
            android:onClick="onUploadClick"/>
    </LinearLayout>
</ScrollView>